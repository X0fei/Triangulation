<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Triangulation.MainWindow"
        Title="Triangulation">
	<StackPanel>
		<Canvas>
			<!--Вышка 1-->
			<Ellipse Width="5" Height="5" Fill="Black"
					 Margin="-2.5"
					 Canvas.Left="100"
					 Canvas.Top="200"/>
			<!--Радиус вышки 1-->
			<Ellipse Width="500" Height="500" Fill="Green"
					 Opacity="150"
					 Margin="-250"
					 Canvas.Left="100"
					 Canvas.Top="200"/>
			
			<!--Вышка 2-->
			<Ellipse Width="5" Height="5" Fill="Black"
					 Margin="-2.5"
					 Canvas.Left="400"
					 Canvas.Top="100"/>
			<!--Радиус вышки 2-->
			<Ellipse Width="500" Height="500" Fill="Green"
					 Opacity="150"
					 Margin="-250"
					 Canvas.Left="400"
					 Canvas.Top="100"/>
			
			<!--Вышка 3-->
			<Ellipse Width="5" Height="5" Fill="Black"
					 Margin="-2.5"
					 Canvas.Left="400"
					 Canvas.Top="500"/>
			<!--Радиус вышки 3-->
			<Ellipse Width="500" Height="500" Fill="Green"
					 Opacity="150"
					 Margin="-250"
					 Canvas.Left="400"
					 Canvas.Top="500"/>
			
			<!--Искомое устройство-->
			<Ellipse Width="5" Height="5" Fill="Red"
					 Margin="-2.5"
					 Canvas.Left="300"
					 Canvas.Top="300"/>
		</Canvas>
	</StackPanel>
</Window>